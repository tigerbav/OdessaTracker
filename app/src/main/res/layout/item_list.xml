<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageEvent"
        android:layout_width="120dp"
        android:layout_height="114dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_empty_image" />

    <TextView
        android:id="@+id/nameEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:paddingEnd="200dp"
        android:text="TextView"
        android:textSize="14sp"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageEvent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="11dp"

        android:text="TextView"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/imageEvent"
        app:layout_constraintTop_toBottomOf="@+id/date_image" />

    <TextView
        android:id="@+id/read_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:text="Read more"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageEvent"
        app:layout_constraintStart_toEndOf="@+id/imageEvent" />

    <Button
        android:id="@+id/rating"
        android:layout_width="36dp"
        android:layout_height="16dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/rating_back"
        android:drawableEnd="@drawable/ic_star"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="5"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/saved_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageEvent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_saved" />

    <ImageView
        android:id="@+id/date_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/imageEvent"
        app:layout_constraintTop_toBottomOf="@+id/nameEvent"
        app:srcCompat="@drawable/ic_date" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/date_image"
        app:layout_constraintTop_toBottomOf="@+id/nameEvent" />

</androidx.constraintlayout.widget.ConstraintLayout>